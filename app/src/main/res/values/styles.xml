<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- @android:style/Theme.NoTitleBar.Fullscreen -->
        <!-- <item name="android:windowTranslucentStatus">true</item> -->
        <!-- <item name="android:buttonStyle">@style/button</item> -->

    </style>

    <style name="Text">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="Text.TextOpenSansRegular">
        <item name="co.lowprofile.ooquo:font">fonts/open_sans_regular.ttf</item>
    </style>
    <style name="Text.TextOpenSansBold">
        <item name="co.lowprofile.ooquo:font">fonts/open_sans_bold.ttf</item>
    </style>
    <style name="Text.TextOpenSansSemiBold">
        <item name="co.lowprofile.ooquo:font">fonts/open_sans_semibold.ttf</item>
    </style>
    <style name="Text.TextOpenSansItalic">
        <item name="co.lowprofile.ooquo:font">fonts/open_sans_italic.ttf</item>
    </style>
    <style name="Text.TextOpenSansLight">
        <item name="co.lowprofile.ooquo:font">fonts/open_sans_light.ttf</item>
    </style>
    <style name="Text.TextProximaRegular">
        <item name="co.lowprofile.ooquo:font">fonts/proxima_nova_regular.otf</item>
    </style>
    <style name="Text.TextProximaBold">
        <item name="co.lowprofile.ooquo:font">fonts/proxima_nova_bold.otf</item>
    </style>
    <style name="Text.TextProximaSemiBold">
        <item name="co.lowprofile.ooquo:font">fonts/proxima_nova_semibold.otf</item>
    </style>

    <!-- Header -->
    <style name="Header">
        <item name="android:background">@color/gray_dark</item>
    </style>

    <style name="HeaderLine">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="HeaderTitle" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">HeaderTitle</item>
    </style>
    <!-- / Header -->


    <!-- TabLayout -->
    <style name="TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPadding">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="TabLayout.Top">
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorColor">@color/orange</item>
    </style>

    <!-- / TabLayout -->

    <!-- Fragment -->
    <style name="Fragment">
        <item name="android:background">@color/gray_seach_bg</item>
    </style>
    <!-- / Fragment -->

    <!-- ListView -->
    <style name="ListView">
        <item name="android:background">@color/transparent</item>
    </style>
    <!-- / ListView -->

    <style name="FormInputText" parent="Text.TextProximaRegular">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_text_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:height">45dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ListSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/gray_separator</item>
    </style>


    <style name="Input" parent="Text.TextOpenSansRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@color/white_dirty</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColorHint">@color/gray_light</item>
    </style>

    <style name="CommentInput" parent="Text.TextOpenSansRegular">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:height">35dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColorHint">@color/gray_light</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="MultilineInput" parent="Input">
        <item name="android:lines">4</item>
    </style>

    <style name="MultilineInput2" parent="Input">
        <item name="android:lines">8</item>
        <item name="android:minLines">8</item>
        <item name="android:gravity">top|center_horizontal</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="InputContainer">
        <item name="android:background">@color/white_dirty</item>
    </style>

    <style name="InputSeparator">
        <item name="android:background">@color/gray_very_light</item>
    </style>

    <style name="Separator">
        <item name="android:background">@color/yellow</item>
    </style>

    <style name="Button" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BackButton">
        <item name="android:src">@drawable/back_button</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="ImageButton">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="MenuButton" parent="ImageButton">
        <item name="android:src">@drawable/menu_button</item>
    </style>

    <style name="LikeButton" parent="ImageButton">
        <item name="android:src">@drawable/like_button</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="MoreButton" parent="ImageButton">
        <item name="android:src">@drawable/more_button_enabled</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">35dp</item>
    </style>

    <style name="CameraButton">
        <item name="android:src">@drawable/camera_button</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:padding">0dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:minHeight">40dp</item>
    </style>

    <style name="TextButton" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MenuTextButton" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="AuthorNameButton" parent="TextButton">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableEnd">@drawable/right_arrow</item>
    </style>

    <style name="UserNameButton" parent="TextButton">
        <item name="android:textColor">@color/white_dirty</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="UnderlinedTextButton" parent="TextButton">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="BookAuthorNameButton" parent="TextButton">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:drawableEnd">@drawable/right_arrow</item>
    </style>

    <style name="BookNameText" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>


    <style name="MenuCameraButton" parent="ImageButton">
        <item name="android:src">@drawable/menu_camera_button</item>
    </style>

    <style name="MenuSettingsButton" parent="ImageButton">
        <item name="android:src">@drawable/menu_settings_button</item>
    </style>


    <style name="TabButton">
        <item name="android:background">@drawable/tab_button</item>
    </style>

    <style name="TabButtonTitle" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabButtonCount" parent="Text.TextOpenSansBold">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="SearchInput">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchInputText" parent="Text.TextOpenSansRegular">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:textColorHint">@color/gray_text_light</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- SearchListItem -->
    <style name="SearchListItem">
        <item name="android:background">@color/white</item>
    </style>
    <style name="SearchListItemTitle" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">Antalya</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="SearchListItemIcon">
        <item name="android:tint">@color/blue</item>
        <item name="android:src">@drawable/tab_otel_icon</item>
    </style>
    <!-- / SearchListItem -->


    <style name="FollowButton">
        <item name="android:background">@drawable/follow_button</item>
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FollowButtonTitle" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FollowButtonCount" parent="Text.TextOpenSansBold">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DetailTitle" parent="Text.TextOpenSansBold">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="DetailText" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@drawable/tab_button_text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BookButton">
        <item name="android:background">@drawable/book_button</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="BookButtonTitle" parent="Text.TextOpenSansBold">
        <item name="android:textColor">@color/gray_very_light</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BookButtonAuthor" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/gray_very_light</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="NoSelectText" parent="Text.TextOpenSansBold">
        <item name="android:textColor">@color/gray_very_light</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CommentUserNameText" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CommentText" parent="Text.TextOpenSansRegular">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
